from tkinter import *
root = Tk()
root.title("BCA APP")
root.geometry("500x700")
f1 = Frame(root, bg="red")
f1.pack(fill=BOTH, expand=True)
l1 = Label(f1, text="ARITHMETIC OPERATION", bg="red", fg="yellow", font=("Arial", 25, "bold"))

l1.pack()
f2 = Frame(root, bg="pink")
f2.pack(fill=BOTH, expand=True)
l2 = Label(f2, text="First Number:", bg="pink", font=("Arial", 15))
l2.pack()
root.mainloop()
